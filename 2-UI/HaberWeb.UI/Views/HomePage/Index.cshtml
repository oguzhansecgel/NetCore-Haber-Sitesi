@if (Model != null)
{
	<section class="block-wrapper">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-md-12 col-sm-12 col-xs-12">
					<div class="row">
						@foreach (var item in Model)
						{
							<div class="col-md-6 col-sm-6">
								<div class="post-block-wrapper post-grid-view clearfix">
									<div class="post-thumbnail thumb-float-style">
										@foreach (var image in item.NewsImage)
										{
											<a href="@Url.Action("SingleContent", "HomePage", new { newsID = item.NewsID })">
												<img class="img-fluid" src="https://localhost:7187/@image.Path" alt="">
											</a>

										}
									</div>
									<div class="col-md-6 col-sm-6">
										<div class="post-content">
											<h2 class="post-title mt-3">
												<a href="@Url.Action("SingleContent", "HomePage", new { newsID = item.NewsID })">@item.NewsTitle</a>
											</h2>
											<div class="post-meta">
												<span class="posted-time">@item.NewsEnterTime</span>
											</div>
											<p>
												@{
													string newsSummary = item.NewsSummary;
													if (newsSummary.Length > 40)
													{
														newsSummary = newsSummary.Substring(0, 40) + "...";
													}
													@newsSummary
												}
											</p>
										</div>
									</div>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</section>
}
else
{
	<p>Model is null.</p>
}