@model CreateNewsDto
@{
    ViewData["Title"] = "CreateNews";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Haber İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Haber Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productname">Haber Başlığını Giriniz</label>
                                <input type="text" class="form-control" asp-for="NewsTitle" id="newstitle">
                            </div>
                            <div class="form-group">
                                <label for="productname">Varsa Haber İçerik Başlığını Giriniz</label>
                                <input type="text" class="form-control" asp-for="NewsContentTitle" id="newstitle">
                            </div>
                            <div class="form-group">
                                <label for="productname">Varsa Haber İçerik 2 Başlığını Giriniz</label>
                                <input type="text" class="form-control" asp-for="NewsContentTitle2" id="newstitle">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="price">Haber Özeti Giriniz</label>
                                <input type="text" class="form-control" asp-for="NewsSummary" id="newssummary">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="imageurl">Haber İçeriğini Giriniz</label>
                                <textarea class="form-control" asp-for="NewsContent" id="newscontent" rows="4"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Haber İçeriği 2 Giriniz</label>
                                <textarea class="form-control" asp-for="NewsContent2" id="newscontent" rows="4"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Haber İçeriği 3 Giriniz</label>
                                <textarea class="form-control" asp-for="NewsContent3" id="newscontent" rows="4"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="price">Haber Kategorisini Seçiniz</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                            </div>
                        </div>          
                        <div class="card-action">
                            <button class="btn btn-primary">Haberi Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
 
