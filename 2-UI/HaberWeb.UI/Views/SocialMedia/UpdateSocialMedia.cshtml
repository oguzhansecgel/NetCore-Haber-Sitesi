@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Sosyal Medya Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <div class="form-group">
                                <label for="categoryname">İnstagram URL Giriniz</label>
                                <input type="text" class="form-control" asp-for="InstagramURL" id="categoryname">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Twitter URL Giriniz</label>
                                <input type="text" class="form-control" asp-for="TwitterURL" id="categoryname">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Youtube URL Giriniz</label>
                                <input type="text" class="form-control" asp-for="YoutubeURL" id="categoryname">
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Facebook URL Giriniz</label>
                                <input type="text" class="form-control" asp-for="FacebookURL" id="categoryname">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Sosyal Medya Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>