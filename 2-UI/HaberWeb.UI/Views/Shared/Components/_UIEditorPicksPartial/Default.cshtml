@model List<ResultNewsDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="weekly3-news-area pt-80 pb-130">
	<div class="container">
		<div class="weekly3-wrapper">
			<div class="row">
				<div class="col-lg-12">
					<div class="slider-wrapper">
						<!-- Slider -->
						<div class="row">
							<div class="col-lg-12">
								<div class="weekly3-news-active dot-style d-flex">
									@foreach (var item in Model.Where(news => news.EditorPick))
									{
										<div class="weekly3-single">
											@foreach (var image in item.NewsImage)
											{
												<div class="weekly3-img">
													<img src="https://localhost:7187/@image.Path" alt="" style="max-width:500px; max-height:500px; width:auto; height:auto;">
												</div>

											}
											<div class="weekly3-caption">
												<h4><a href="@item.NewsTitle">@item.NewsTitle</a></h4>
												<p>@item.NewsEnterTime</p>
											</div>
										</div>
									}

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
