@model List<ResultCategoryDto>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<header>
	<!-- Header Start -->
	<div class="header-area">
		<div class="main-header ">
			<div class="header-mid gray-bg">
				<div class="container">
					<div class="row d-flex align-items-center">
						<!-- Logo -->
						<div class="col-xl-3 col-lg-3 col-md-3 d-none d-md-block">
							<div class="logo">
								<a href="index.html"><img src="~/news-master/assets/img/logo/logo.png" alt=""></a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="header-bottom header-sticky">
				<div class="container">
					<div class="row align-items-center">
						<div class="col-xl-8 col-lg-8 col-md-12 header-flex">
							<!-- sticky -->
							<div class="sticky-logo">
								<a href="/Default/Index"><img src="~/news-master/assets/img/logo/logo.png" alt=""></a>
							</div>
							<!-- Main-menu -->
							<div class="main-menu d-none d-md-block">
								<nav>
									<ul id="navigation">
										<li><a href="/_UIEditorPicks/Index">Anasayfa</a></li>
										@foreach (var item in Model)
										{
											<li>
												<button class="nav-link" style="background-color: #ff2143; border: none; color: white;font-weight: bold; cursor: pointer;font-size: 18px;" onclick="getContentDetail('@item.CategoryID')">
													@item.CategoryName
												</button>
											</li>

										}
									</ul>
								</nav>
							</div>
						</div>
						@await Component.InvokeAsync("_UISocialMediaPartial")
						<!-- Mobile Menu -->
						<div class="col-12">
							<div class="mobile_menu d-block d-md-none"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Header End -->
</header>