@model List<ResultSocialMediaDto>

<footer class="footer footer-main">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Sol Taraftaki Bölüm -->
            <div class="col-md-6 col-sm-12 text-center">
                <a href="index.html"><img src="images/logos/footer-logo.png" alt="" class="img-fluid"></a>
                <ul class="list-inline footer-social">
                    @foreach (var item in Model)
                    {
                        <li class="li list-inline-item"><a href="@item.FacebookURL"><i class="fa fa-facebook"></i></a></li>
                        <li class="li list-inline-item"><a href="@item.TwitterURL"><i class="fa fa-twitter"></i></a></li>
                        <li class="li list-inline-item"><a href="@item.YoutubeURL"><i class="fa fa-youtube"></i></a></li>
                        <li class="li list-inline-item"><a href="@item.InstagramURL"><i class="fa fa-instagram"></i></a></li>
                    }
                </ul>
            </div>

            <!-- Sağ Taraftaki Bölüm -->
            <div class="col-md-6 col-sm-12 text-center">
                <div class="single-post">
                    <p style="color:white"> İletişim Adreslerimiz : </p>
                </div>
            </div>

            <!-- Scroll to Top Button -->
            <div class="scroll-to-top">
                <button class="btn btn-primary" title="Back to Top">
                    <i class="fa fa-angle-up"></i>
                </button>
            </div>
        </div>
    </div>
</footer>