@model List<ResultNewsDto>
@{
	var sortedNews = Model.OrderByDescending(news => news.NewsEnterTime).ToList();
}
<div class="about-area2 gray-bg pt-60 pb-60">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 mx-auto">
				<div class="whats-news-wrapper">
					<div class="row justify-content-between align-items-end mb-15">
						<div class="col-xl-4">
							<div class="section-tittle mb-30">
								<h3>Kategori Adı</h3>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-10 mx-auto">
							<div class="tab-content" id="nav-tabContent">
								<div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
									<div class="row">
										@foreach (var item in sortedNews)
										{
											<div class="col-xl-6 col-lg-6 col-md-6">
												<div class="whats-news-single mb-40 mb-40">
													@foreach (var image in item.NewsImage)
													{
														<div class="whates-img">
															<img src="https://localhost:7187/@image.Path" alt="" width="520" height="353">
														</div>
													}

													<div class="whates-caption whates-caption2">

														<h4>
															<a href="#">
																@(item.NewsTitle.Length > 25 ? item.NewsTitle.Substring(0, 25) + "..." : @item.NewsTitle)
															</a>
														</h4>
														<span>@item.NewsEnterTime</span>
														<p>
															 Haberin Detaylarına Ulaşmak İçin Tıklayınız.
														</p>



													</div>
												</div>
											</div>
										}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
