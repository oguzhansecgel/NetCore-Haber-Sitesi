@model List<ResultNewsWithCategoryDto>

<section class="news-style-four section-padding">
	<div class="container">
		<div class="row">

			@foreach (var categoryGroup in Model
					.Where(x => x.EditorPick)
					.GroupBy(x => x.CategoryName))
			{
				<div class="col-lg-4 col-md-6">
					<div class="block">
						<h3 class="news-title">
								<span>@categoryGroup.Key</span>
						</h3>
						<div class="post-list-block">
							@foreach (var item in categoryGroup)
							{
								<div class="post-block-wrapper post-float clearfix">
									<div class="post-thumbnail">
										@foreach (var image in item.NewsImage)
										{
											<a href="@Url.Action("SingleContent", "HomePage", new { newsID = item.NewsID })">
												<img class="img-fluid" src="https://localhost:7187/@image.Path" alt="post-thumbnail">
											</a>
										}
									</div>

									<div class="post-content">
										<h2 class="post-title title-sm">
											<a href="@Url.Action("SingleContent", "HomePage", new { newsID = item.NewsID })">@item.NewsTitle</a>
										</h2>
										<div class="post-meta">
											<span class="posted-time">@item.NewsEnterTime</span>
										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
			}

		</div>
	</div>
</section>
